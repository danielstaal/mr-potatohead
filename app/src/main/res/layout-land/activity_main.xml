<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:text="Mr. Potatohead"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="327dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="daniel.studentname_pset0.MainActivity"
    android:clickable="false">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arms"
        android:src="@drawable/arms"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/body"
        android:src="@drawable/body"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ears"
        android:src="@drawable/ears"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eyebrows"
        android:src="@drawable/eyebrows"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eyes"
        android:src="@drawable/eyes"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/glasses"
        android:src="@drawable/glasses"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hat"
        android:src="@drawable/hat"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mouth"
        android:src="@drawable/mouth"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mustache"
        android:src="@drawable/mustache"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nose"
        android:src="@drawable/nose"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shoes"
        android:src="@drawable/shoes" />

        <GridLayout
            android:orientation="vertical"
            android:layout_width="372dp"
            android:layout_height="172dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/arms"
            android:layout_toEndOf="@+id/arms">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arms"
                android:layout_marginBottom="0dp"
                android:id="@+id/arms_checkbox"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="false"
                android:layout_row="0"
                android:layout_column="0"
                android:tag="arms"
                android:onClick="checkboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ears"
                android:id="@+id/body_checkbox"
                android:layout_marginBottom="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_row="1"
                android:layout_column="0"
                android:tag="ears"
                android:onClick="checkboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hat"
                android:id="@+id/hat_checkbox"
                android:layout_marginBottom="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_row="1"
                android:layout_column="7"
                android:tag="hat"
                android:onClick="checkboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eyebrows"
                android:id="@+id/eyebrows_checkbox"
                android:layout_marginBottom="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_row="2"
                android:layout_column="0"
                android:tag="eyebrows"
                android:onClick="checkboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glasses"
                android:id="@+id/glasses_checkbox"
                android:layout_marginBottom="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_row="2"
                android:layout_column="7"
                android:tag="glasses"
                android:onClick="checkboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eyes"
                android:id="@+id/eyes_checkbox"
                android:layout_marginBottom="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_row="3"
                android:layout_column="0"
                android:tag="eyes"
                android:onClick="checkboxClicked"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mouth"
                android:id="@+id/mouth_checkbox"
                android:layout_marginBottom="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_row="3"
                android:layout_column="7"
                android:tag="mouth"
                android:onClick="checkboxClicked"/>

            <CheckBox
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Mustache"
                android:id="@+id/mustache_checkbox"
                android:layout_marginBottom="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_row="0"
                android:layout_column="7"
                android:tag="mustache"
                android:onClick="checkboxClicked"/>

            <CheckBox
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Shoes"
                android:id="@+id/shoes_checkbox"
                android:layout_marginBottom="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_row="4"
                android:layout_column="0"
                android:tag="shoes"
                android:onClick="checkboxClicked"/>

            <CheckBox
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Nose"
                android:id="@+id/nose_checkbox"
                android:layout_marginBottom="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_row="4"
                android:layout_column="7"
                android:tag="nose"
                android:onClick="checkboxClicked"/>

        </GridLayout>
        <!--android:visibility="invisible"-->

    </RelativeLayout>

</LinearLayout>